<%- include("../partials/header") %>

    <header class="jumbotron">
        <div class="container">
            <h1 class="display-4" style="text-align: center;" id="bepltitle">( Beautiful Places <i class="fas fa-sm fa-camera-retro"></i> )</h1>
            <p class="lead" style="text-align: center;" id="bepldesc">Share awesome places from all over the world! <i class="fas fa-globe-asia"></i></p>
            <p style="text-align: center;">
                <a class="btn btn-primary btn-lg" href="/place/new"><i class="fas fa-plus"></i> Add New Place</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% place.forEach(function (place) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <a href="/place/<%= place._id %>"><img class="card-img-top" src="<%= place.image %>" alt="<%= place.name %>"></a>
                    <div class="card-body">
                        <h3 class="card-title"><%= place.name %></h3>
                        <p class="card-text"><%= place.location %></p>
                        <div>
                            <span class="badge badge-light"><i class="fas fa-thumbs-up"></i> <%= place.likes.length %></span>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div> 

    <nav aria-label="Page navigation">
        <% if (pages && pages > 0) { %>
        <ul class="pagination justify-content-center">
            <% if (current == 1) { %>
            <li class="page-item disabled"><a class="page-link">First</a></li>
            <% } else { %>
            <li><a class="page-link" href="/place">First</a></li>
            <% } %>
        
            <% if (current == 1) { %>
            <li class="page-item disabled"><a class="page-link">«</a></li>
            <% } else { %>
            <li><a class="page-link" href="/place?page=<%= Number(current) - 1 %>">«</a></li>
            <% } %>
        
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a class="page-link"><%= i %></a></li>
            <% } else { %>
            <li><a class="page-link" href="/place?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>
            <% } %>
        
            <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">»</a></li>
            <% } else { %>
            <li><a class="page-link" href="/place?page=<%= Number(current) + 1 %>">»</a></li>
            <% } %>
        
            <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">Last</a></li>
            <% } else { %>
            <li><a class="page-link" href="/place?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </nav>

<%- include("../partials/footer") %>