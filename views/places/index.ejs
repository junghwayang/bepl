<%- include("../partials/header") %>

    <header class="jumbotron">
        <div class="container"> 
            <h1 style="text-align: center;">Beautiful Places üèù</h1>
            <p style="text-align: center;">Share awesome places from all over the world!</p>
            <p style="text-align: center;">
                <a class="btn btn-primary btn-lg" href="/place/new">Add New Place</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% place.forEach(function (place) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <a href="/place/<%= place._id %>"><img src="<%= place.image %>"></a>
                    <div class="caption">
                        <h3><%= place.name %></h3>
                        <p><%= place.location %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div> 

<%- include("../partials/footer") %>