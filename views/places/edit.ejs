<%- include("../partials/header") %>

    <div class="row">
        <h1 style="text-align: center;">Edit <%= place.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/place/<%= place._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="place[name]" value="<%= place.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input class="form-control" type="text" name="place[image]" value="<%= place.image %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="place[location]" value="<%= place.location %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" type="text" name="place[description]" value="<%= place.description %>"></textarea>
                </div>
                <div class="form-group">    
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/place">Go back</a>
        </div>
    </div>

<%- include("../partials/footer") %>